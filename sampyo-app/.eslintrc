{
    "root": true,
    "extends": [
        "@react-native-community",
        "airbnb-typescript",
        "prettier",
        "prettier/@typescript-eslint",
        "prettier/react"
    ],
    "rules": {
        "@typescript-eslint/no-use-before-define": "off",
        "import/prefer-default-export": "off",
        "react/prop-types": "off",
        "react-hooks/exhaustive-deps": "off"
    },
    "parserOptions": {
        "project": "./tsconfig.json",
        "tsconfigRootDir": "./"
    }
}